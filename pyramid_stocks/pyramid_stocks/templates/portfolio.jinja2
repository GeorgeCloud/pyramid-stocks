{% extends "base.jinja2" %}

{% block content %}
<center>
  <h1>Welcome To Your Portfolio</h1>
</center>

{% for stock in stocks %}
<fieldset>
   <legend>{{stock.symbol}}</legend>
   <h2>{{stock.companyName}}</h2>
   <h4>Description: {{stock.description}}</h3>
   <p><a href="{{request.route_url('stock_detail', symbol=stock.symbol)}}">view more</a></p>
</fieldset>
{% endfor %}

{% endblock content %}
